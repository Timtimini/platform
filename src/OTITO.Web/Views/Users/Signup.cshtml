@using Microsoft.Extensions.Options
@using reCAPTCHA.AspNetCore
@inject IOptions<RecaptchaSettings> RecaptchaSettings
@model OTITO.Web.Models.Authentication.UserSignup
<form method="post" action="@Url.Action("Signup", "Users")">
    <div style="height:200px"></div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div style="color:red; border:red;padding:20px">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="row">
        <div class="col-lg-6">
            <div class="modal-input">
                <img src="~/images/mail.svg" width="24" height="18" style="margin-top:16px; margin-left:10px;" />
                @Html.EditorFor(x => x.Email, new { style = "align-self:stretch;" })
            </div>
            <div class="row delegate" style="color:red;font-size:14px;">

                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="modal-input">
                <img src="~/images/lock.svg" width="18" height="26" style="margin-top:13px; margin-left:10px;" />
                @Html.EditorFor(x => x.Password, new { style = "align-self:stretch;" })
            </div>
            <div class="row delegate" style="color:red;font-size:14px;">
                @Html.ValidationMessageFor(x => x.Password)
            </div>

            <div class="modal-input">
                <img src="~/images/lock.svg" width="18" height="26" style="margin-top:13px; margin-left:10px;" />
                @Html.EditorFor(x => x.ConfirmPassword, new { style = "align-self:stretch;" })

            </div>


            <div style="margin-left:20px">
                @Html.Recaptcha(RecaptchaSettings.Value)
            </div>
            <div class="row delegate" style="color:red;font-size:14px;">
                @(Model.ValidCaptcha == false ? "Invalid Captcha" : "")
            </div>

            <div class="row delegate">
                <div class="col-lg-12" style="text-align:left;">
                    <input type="checkbox" name="terms" id="terms" onclick="checkboxCheck()" />
                    By signing up to òtító and using the website, you agree that you have read the
                    <a href="https://app.termly.io/document/privacy-notice/c18d0dd9-6afa-4e37-97dd-4b7a608b1684"
                       target="_blank">privacy policy</a>
                    and
                    <a target="_blank" href="https://cookiepolicygenerator.com/live.php?token=ZPhWZ8FrepQoCogYPg4ufRgGzcnGsQUL">
                        cookie policy
                    </a>
                    , and agree to the processing of your data as described in both.

                </div>
            </div>

            <div class="row delegate">
                <div class="col-lg-10">
                    <button class="btn btn-success" type="submit" id="submit" disabled="disabled">
                        Signup
                    </button>
                </div>
            </div>

        </div>
        <div class="col-lg-6">

            <button type="button" class="btn btn-success col-lg-10" style="margin-top:10px" onclick="window.location.href='/Users/Login'">
                Login
            </button>
        </div>
    </div>
</form>


<script>
    function checkboxCheck()
    {

        if (document.getElementById('terms').checked) {
            document.getElementById("submit").disabled = false;
        } else {
    document.getElementById("submit").disabled = true;
        }
    }
</script>