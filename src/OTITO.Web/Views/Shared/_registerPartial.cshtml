@using Microsoft.Extensions.Options
@using reCAPTCHA.AspNetCore
@using reCAPTCHA.AspNetCore.Templates
@inject IOptions<RecaptchaSettings> RecaptchaSettings


<div style="position:fixed;top:0;left:0;width:100%;height:100%;z-index:9999;background:#000;opacity:0.5;display:none;"
     id="processing">
</div>
<div style="position:fixed;top:0;left:0;width:100%;height:100%;z-index:9998;display:none;"
     id="processing_loader">

    <div class="spinner-border" style="width: 3rem; height: 3rem; position:absolute;top:50%;left:50%; " role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>


<div class="modal fade bd-example-modal-lg" id="joinModal" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">


            <div class="modal-body" style="text-align:center;display:none;" id="hiddenSignupConfig">
                <h1>Just one single step...</h1>
                <form id="hiddenFacebook" method="post" action="@Url.Action("LoginWithFacebook","Users")">
                    <input name="uid" type="hidden" id="uid" value="" />
                    <div class="row delegate">
                        <div class="col-lg-12" style="text-align:left;">
                            <input type="checkbox" name="terms" id="terms_1" onclick="checkboxCheck_1()" />
                            By signing up to òtító and using the website, you agree that you have read the
                            <a href="https://app.termly.io/document/privacy-notice/c18d0dd9-6afa-4e37-97dd-4b7a608b1684"
                               target="_blank">privacy policy</a>
                            and
                            <a target="_blank" href="https://cookiepolicygenerator.com/live.php?token=ZPhWZ8FrepQoCogYPg4ufRgGzcnGsQUL">
                                cookie policy
                            </a>
                            , and agree to the processing of your data as described in both.

                        </div>
                    </div>

                    <button class="btn btn-success" type="submit" id="submit_1" disabled="disabled">
                        Continue
                    </button>
                </form>
            </div>
            <div class="modal-body" style="text-align:center;" id="regularScenarios">


                <div class="row">
                    <div class="col-lg-6" id="login" style="display:none;">
                        <form method="post" id="multipleForm" action="@Url.Action("Login", "Users")">
                            <div class="modal-input">
                                <img src="~/images/mail.svg" width="24" height="18" style="margin-top:16px; margin-left:10px;" />


                                <input type="text" name="Email" placeholder="Email" style="align-self:stretch;" required />
                            </div>
                            <div class="modal-input">
                                <img src="~/images/lock.svg" width="18" height="26" style="margin-top:13px; margin-left:10px;" />
                                <input type="password" name="Password" placeholder="Password" style="align-self:stretch;" required />
                            </div>

                            <button class="btn btn-success" type="submit">
                                Login
                            </button>
                        </form>
                    </div>

                    <div class="col-lg-6" id="signup">
                        <form method="post" id="multipleForm" action="@Url.Action("Signup", "Users")">
                            <div class="modal-input">
                                <img src="~/images/mail.svg" width="24" height="18" style="margin-top:16px; margin-left:10px;" />


                                <input type="text" name="Email" placeholder="Email" style="align-self:stretch;" required />
                            </div>
                            <div class="modal-input">
                                <img src="~/images/lock.svg" width="18" height="26" style="margin-top:13px; margin-left:10px;" />
                                <input type="password" name="Password" placeholder="Password" style="align-self:stretch;" required />
                            </div>
                            <div class="modal-input">
                                <img src="~/images/lock.svg" width="18" height="26" style="margin-top:13px; margin-left:10px;" />
                                <input type="password" name="ConfirmPassword" placeholder="Confirm Password" style="align-self:stretch;" required />

                            </div>

                            <div style="margin-left:20px">
                                @(Html.Recaptcha<RecaptchaV2Checkbox>(RecaptchaSettings.Value))
                            </div>
                            <div class="row delegate">
                                <div class="col-lg-12" style="text-align:left;">
                                    <input type="checkbox" name="terms" id="terms" onclick="checkboxCheck()" />
                                    By signing up to òtító and using the website, you agree that you have read the
                                    <a href="https://app.termly.io/document/privacy-notice/c18d0dd9-6afa-4e37-97dd-4b7a608b1684"
                                       target="_blank">privacy policy</a>
                                    and
                                    <a target="_blank" href="https://cookiepolicygenerator.com/live.php?token=ZPhWZ8FrepQoCogYPg4ufRgGzcnGsQUL">
                                        cookie policy
                                    </a>
                                    , and agree to the processing of your data as described in both.

                                </div>
                            </div>

                            <button class="btn btn-success" type="submit" id="submit" disabled="disabled">
                                Signup
                            </button>
                        </form>

                    </div>
                    <div class="col-lg-6">

                        <a href="#" class="btn btn-facebook col-lg-10" style="color:white;" onclick="loginWithFacebook(event,1)">
                            <img src="~/images/facebok_icon_white.svg" width="20" height="20" />
                            Continue with Facebook
                        </a>
                        <a href="#" onclick="loginWithFacebook(event,2)" class="btn btn-google col-lg-10" style="color:white">
                            <img src="~/images/google_icon_white.svg" width="20" height="20" />
                            Continue with Google
                        </a>
                        <button class="btn btn-success col-lg-10" style="margin-top:10px;"
                                id="loginButton"
                                onclick="login()">
                            Login
                        </button>

                        <button class="btn btn-success col-lg-10 registerBtn" style="margin-top:10px;display:none;margin-left:31px;" id="signupButton"
                                onclick="register()">
                            Register
                        </button>



                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


<script>

    function checkboxCheck()
    {

        if (document.getElementById('terms').checked) {
            document.getElementById("submit").disabled = false;
        } else {
    document.getElementById("submit").disabled = true;
        }
    }

    function checkboxCheck_1()
    {

        if (document.getElementById('terms_1').checked) {
            document.getElementById("submit_1").disabled = false;
        } else {
    document.getElementById("submit_1").disabled = true;
        }
    }

function register()
    {

        var login = document.getElementById("login");
        login.style.display = "none";
        var loginButton = document.getElementById("loginButton");
        loginButton.style.display="inline-block";

    var signup = document.getElementById("signup");
        signup.style.display = "block";
        var signupButton = document.getElementById("signupButton");
        signupButton.style.display="none";


    }


    function login()
    {


        var login = document.getElementById("login");
        login.style.display = "block";
        var loginButton = document.getElementById("loginButton");
        loginButton.style.display="none";

        var signup = document.getElementById("signup");
        signup.style.display = "none";
        var signupButton = document.getElementById("signupButton");
        signupButton.style.display="block";

    }


</script>
    
