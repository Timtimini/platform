@model Otito.Web.Models.Contact.ContactIn

<style>
    p {
        padding-left: 20px;
    }

    .social {

        padding: 20px 30px;
        font-size: 30px;
        width: 50px;
        text-align: center;
        text-decoration: none;
        margin: 5px 2px;
    }

        .social:hover {
            opacity: 0.7;
            text-decoration:none;
        }
    .social-facebook {
        background: #3B5998;
        color: white;
    }
    .social-linkedin {
        background: #007bb5;
        color: white;
    }
    .social-twitter {
        background: #55ACEE;
        color: white;
    }
    .fa-facebook {
        background: #3B5998;
        color: white;
    }
</style>
<div class="container mainContainer">

    <div class="aboutContainer">
        <h1 class="trending_topics" style="text-align:center;margin-top:20px;">
            Got a question, idea or some feedback? Let us know
        </h1>
        @if (!Model.sent)
        {

            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 pb-5">


                    <!--Form with header-->

                    <form action="" method="post">
                        <div class="card border-primary rounded-0">
                            <div class="card-header p-0">
                                <div class="bg-info text-white text-center py-2">
                                    <h3><i class="fa fa-envelope"></i> Contact Us</h3>
                                    <p class="m-0">Fill the form below</p>
                                </div>
                            </div>
                            <div class="card-body p-3">

                                <!--Body-->
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                        </div>
                                        <input asp-for="Name" type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                                        </div>
                                        <input asp-for="Email" type="email" class="form-control" id="email" name="email" placeholder="example@gmail.com" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                                        </div>
                                        <textarea asp-for="Message" class="form-control" placeholder="Put your message here" required></textarea>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <input type="submit" value="Submit" class="btn btn-info btn-block rounded-0 py-2">
                                </div>
                            </div>

                        </div>
                    </form>
                    <!--Form with header-->


                </div>
            </div>

        }
        @if (Model.sent)
        {
            <div style="color:green;font-size:20px;text-align:center;">Your message has been sent. We will get back to you shortly.</div>
        }

        <h2 class="subHead" style="text-align:center;">
            Follow us on social media
        </h2>
        <br />
        <div class="row">
            <div class="col-lg-3">

            </div>
            <div class="col-lg-6" style="text-align:center;">
                <a href="http://www.facebook.com/openotito" target="_blank" class="social social-facebook">
                    <i class="fa fa-facebook"></i>
                </a>
                <a href="http://www.twitter.com/openotito" target="_blank" class="social social-twitter">
                    <i class="fa fa-twitter"></i>
                </a>
                <a href="http://www.linkedin.com/company/openotito" target="_blank" class="social social-linkedin">
                    <i class="fa fa-linkedin"></i>
                </a>
            </div>
        </div>
        <br />
        @*<p>
                <h3 style="font-size:18px;">Facebook</h3>
                <a href="http://www.facebook.com/openotito" target="_blank">www.facebook.com/openotito</a>
                <h3>Twitter</h3>
                <a href="http://www.twitter.com/openotito " target="_blank">www.twitter.com/openotito</a>
                <h3>LinkedIn</h3>
                <a href="http://www.linkedin.com/company/openotito " target="_blank">www.linkedin.com/company/openotito</a>

            </p>

            <div style="height:100px"></div>*@

    </div>

</div>